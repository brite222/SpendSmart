@model SpendSmart.Models.Expense

<h2>@(Model.Id == 0 ? "Create Expense" : "Edit Expense")</h2>

<form asp-action="CreateEditExpense" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @* Keep SerialNumber for edits; for creates server will assign one *@
    <input type="hidden" asp-for="SerialNumber" />

    @* Provide hidden defaults for fields not present in the UI so server validation can succeed *@
    <input type="hidden" asp-for="Color" value="Unknown" />
    <input type="hidden" asp-for="Size" value="OneSize" />

    @if (Model.Id != 0)
    {
        <input type="hidden" asp-for="Id" />
    }

    <div class="form-group mb-3">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Value"></label>
        <input asp-for="Value" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" type="number" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>User</label>
        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserList">
            <option value="0">--- Select User ---</option>
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">@((Model.Id == 0) ? "Create" : "Update")</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}